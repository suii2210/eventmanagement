{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,                  // ✅ allow .js files
    "checkJs": false,                 // ✅ skip strict type checking for .js
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.js"                         // ✅ include all JS too
  ],
  "exclude": ["node_modules", "dist"]
}
